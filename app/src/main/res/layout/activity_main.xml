<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danielmossur.calculator.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/megamind"
        android:scaleType="centerCrop"
        android:id="@+id/imageView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorTint"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clean"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/redo"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    tools:style="@style/buttonStyle" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="X*(-1)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reverse"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="X^Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pow"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="x!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/factr"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plus"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minus"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/division"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/multiple"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/one"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/two"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/three"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/equal"
                    android:layout_weight="1"
                    tools:style="@style/Widget.AppCompat.Button.Colored"
                    style="@style/Widget.AppCompat.Button.Colored" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/four"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/five"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/six"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dot"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seven"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eight"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nine"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zero"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

            </TableRow>
        </TableLayout>

        <TextView
            android:text="Enter the number"
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/textView"
            android:textColor="@color/colorText"
            android:textColorHighlight="?attr/colorControlHighlight"
            tools:textColorHighlight="?android:attr/colorControlHighlight"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView3" />

        <TextView
            android:text="Last result : "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_above="@+id/tableLayout"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/result_line"
            android:textColor="@color/colorText"
            android:textColorHighlight="?attr/colorControlHighlight"
            tools:textColorHighlight="?android:attr/colorControlHighlight"/>

        <TextView
            android:text=""
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_line"
            android:textColor="@color/colorText"
            android:textColorHighlight="?attr/colorControlHighlight"
            android:layout_above="@+id/tableLayout"
            android:layout_toEndOf="@+id/textView3" />
    </RelativeLayout>

</RelativeLayout>
